    <property name="autoIncrement" value="true"/>

    <!--
        Added the entity Buchung.
    -->
    <changeSet id="202009241620_altered_Buchung_for_user" author="jhipster">
        <renameColumn tableName="buchung" oldColumnName="user" newColumnName="user_id" columnDataType="varchar(255)"/>
